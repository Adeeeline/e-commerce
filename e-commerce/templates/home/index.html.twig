{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Produits</h1>
		<div class="row">
			{% for product in products %}
				<div class="col-md-3 mt-4">
					<div class="card" style="width: 18rem;">
						<img class="card-img-top" src="{{ asset('uploads/images/' ~ product.image) }}" width="3rem" alt="Card image cap">
						<div class="card-body">
							<a href="{{path('app_product_show')}}"><h5 class="card-title">{{ product.name }}</h5></a>
							<p class="card-text">{{ product.description|slice(0,100) }}...</p>
						</div>
						<div class="row">
							<div class="card-body">
								<p class="card-text">{{ product.price }}</p>
								<a type="button" href="#">
									<i class="fa-solid fa-cart-shopping fa-lg" style="color: #000000"></i>
								</a>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
