{% extends 'base.html.twig' %}

{% block body %}
	<div class="container">
		<table class="table">
			<tr>
				<th>Id</th>
				<th>Quantité</th>
				<th>Date d'ajout</th>
			</tr>
			{% for productAdded in productsAdded %}
				<tr>
					<td>{{ productAdded.id }}</td>
					<td>{{ productAdded.quantity }}</td>
					<td>{{ productAdded.createdAt|date('d-m-Y H:i') }}</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">Aucun historique trouvé.</td>
				</tr>
			{% endfor %}
		</table>
	</div>
{% endblock %}
