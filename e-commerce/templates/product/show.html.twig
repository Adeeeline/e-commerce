{% extends 'base.html.twig' %}

{% block title %}Product
{% endblock %}

{% block body %}
	<div class="container">
		<h1>{{ product.name }}</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Image</th>
					<td>
						{% if product.image %}
							<img src="{{ asset('uploads/images/' ~ product.image) }}" alt="Product image" width="400px">
						{% else %}
							<p>Pas d'image disponible pour ce produit.</p>
						{% endif %}
					</td>
				</tr>
				<tr>
					<th>Name</th>
					<td>{{ product.name }}</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ product.description }}</td>
				</tr>
				<tr>
					<th>Price</th>
					<td>{{ product.price }}</td>
				</tr>
				<tr>
					<th>Catégorie</th>
					<td></td>
				</tr>
				<tr>
					<th>Sous catégorie</th>
					<td>
						{% for subCategory in product.subCategories %}
							{{ subCategory.name }}
						{% endfor %}
					</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('app_product_index') }}">back to list</a>
		<a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>
		<a href="{{ path('app_product_stock_add_history', {'id': product.id}) }}">Afficher l'historique du produit</a>

		{{ include('product/_delete_form.html.twig') }}
	</div>
{% endblock %}
